@model MYBUSINESS.Models.StoreOrderReceiptViewModel
@{
    ViewBag.Title = "Update Store Order Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Store Order Receipt</h3>
                    </div>

                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => Model.StoreOrderReceipt.Id, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => Model.StoreOrderReceipt.Id, new { htmlAttributes = new { @class = "form-control", @Readonly = "Readonly" } })
                            @Html.ValidationMessageFor(model => Model.StoreOrderReceipt.Id, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StoreOrderReceipt.StoreId, "Select Store", new { @class = "control-label" })
                            @if (((SelectList)ViewBag.StoreList).Any())
                            {
                                @Html.DropDownListFor(
                                    model => model.StoreOrderReceipt.StoreId,
                                    (SelectList)ViewBag.StoreList,
                                    "Select a Store",
                                    new { @class = "form-control", @id = "storeDropdown" }
                                )
                            }
                            else
                            {
                                <p class="text-danger">No stores available for selection.</p>
                            }
                            @Html.ValidationMessageFor(model => model.StoreOrderReceipt.StoreId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="box-footer">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Notes</h3>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StoreOrderReceipt.Note, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.StoreOrderReceipt.Note, new
                        {
                            @class = "form-control",
                            id = "compose_textarea",
                            rows = "1",
                            cols = "100",
                            placeholder = "Notes/Pictures",
                            data_toggle = "tooltip",
                            data_placement = "top",
                            title = "Notes"
                        })
                        @Html.ValidationMessageFor(model => model.StoreOrderReceipt.Note, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </section>
}