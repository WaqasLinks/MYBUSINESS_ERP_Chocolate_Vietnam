@model IEnumerable<MYBUSINESS.Models.PackagingProduction>
@{
    double TotalSalePrice = 0;
    double TotalPurchasePrice = 0;
    int TotalStock = 0;
    int carton = 0;
    int piece = 0;
}

<div id="NewData">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table class="table table-hover cell-border" id="NewProductionIndex">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().PProdDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Box)</th>
                                    @*<th>@Html.DisplayNameFor(model => model.QuantityToProduce)</th>*@
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PProdDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Box)</td>
                                        @*<td>
                                                @if (item.Validate ?? false)
                                                {
                                                    @Html.ActionLink("View", "Edit", new { id = item.Id, readonlyMode = true }, new { @class = "btn btn-secondary" })

                                                }
                                                else
                                                {
                                                    @Html.ActionLink("Update", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                                                }
                                                |
                                                @Html.ActionLink("Post Production", "Create", "PostProduction", new { id = item.Id }, new { @class = "btn btn-light text-dark" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                            </td>*@
                                        <td>
                                            @if (item.Validate ?? false)
                                            {
                                                @Html.ActionLink("View", "Edit", new { id = item.Id, readonlyMode = true },
                             new { @class = "btn btn-primary text-white" }) <!-- Blue color for View -->

                                                <!-- Show Post Production button only when Validate is true -->
                                                @Html.ActionLink("Post Production", "Create", "PostProduction", new { id = item.Id },
                             new { @class = "btn btn-warning text-dark fw-bold" }) <!-- Yellow color for Post Production -->
                                            }
                                            else
                                            {
                                                @Html.ActionLink("Update", "Edit", new { id = item.Id },
                             new { @class = "btn btn-info text-white" }) <!-- Light Blue for Update -->
                                            <td>
                                                @Html.ActionLink("Phase3", "EditProductStockDetail", new { packagingProductionId = item.Id }, new { @class = "btn btn-success fw-bold" })

                                            </td>

                                        }

                                            |
                                            <span style="display:none;">
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                                          new { @class = "btn btn-danger text-white" }) <!-- Red color for Delete -->
                                            </span>

                                            </td>




                                            @*<td>
                                                    @Html.ActionLink("Update", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                                                    @Html.ActionLink("Post Production", "Create", "PostProduction", new { id = item.Id }, new { @class = "btn btn-light text-dark" })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                                </td>*@
                                        </tr>
                                    }
                            </tbody>
                            <tfoot>
                                <tr style="font-weight:bold">
                                    <td colspan="4">Total</td>
                                    <td>@TotalStock</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.1.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#NewProductionIndex').DataTable({
            "scrollY": "400px",
            "scrollCollapse": true,
            "paging": false,
            "bInfo": false,
            "order": [[0, "desc"]],
            "searching": true
        });
    });
</script>
