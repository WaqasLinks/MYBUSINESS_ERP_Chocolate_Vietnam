@model MYBUSINESS.Models.ReceiveOrderViewModel

@{
    ViewBag.Title = "Receive Order";
}

<h2>Receive Order</h2>

@using (Html.BeginForm("ReceiveOrderPPPost", "StoreOrder", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.OrderId)
    @Html.HiddenFor(m => m.StoreId)

    <div class="form-group">
        <label>Store</label>
        <input type="text" class="form-control" value="@Model.StoreName" disabled />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReceivedCode)
        @Html.TextBoxFor(m => m.ReceivedCode, new { @class = "form-control", placeholder = "Enter Received Code", required = "required" })
        @Html.ValidationMessageFor(m => m.ReceivedCode, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
}
