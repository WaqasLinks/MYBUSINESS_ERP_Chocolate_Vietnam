@model List<MYBUSINESS.Models.ProductCategoryViewModel>

<h2 style="text-align:center; margin-top: 20px;">Saleable Product Order</h2>

@using (Html.BeginForm("SubmitOrder", "StoreOrder", FormMethod.Post))
{
    <div class="content-wrapper">
        <section class="content">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title" style="text-align:center;">Saleable Product Order</h3>
                </div>
                <div class="box-body">
                   <div class="form-group">
                       <label>Select Store:</label>
                       @Html.DropDownList("storeId", ViewBag.Stores as SelectList, "Select Store", new
                       {
                           @class = "form-control",
                           required = "required",
                           style = "width: 200px;" 
                       })
                   </div>

                    @for (int c = 0; c < Model.Count; c++)
                    {
                        <h4 style="margin-top:20px;"><strong>Category: @Model[c].CategoryName</strong></h4>
                        <table id="productTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="width:10%;">Name</th>
                                    <th style="width:10%;">Quantity</th>
                                    <th style="width:10%;">Unit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model[c].Products.Count; i++)
                                {
                                    var product = Model[c].Products[i];
                                    <tr>
                                        <td style="width: 80px;">@product.Name</td>
                                        <td>
                                            <input type="hidden" name="orderitem[@i].ProductId" value="@product.Id" />
                                            <input type="number" name="orderitem[@i].Quantity" class="form-control" min="1" style="width: 80px;" />
                                        </td>
                                        <td style="width: 80px;">@product.Unit</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit Order</button>
                </div>
            </div>
        </section>
    </div>
}