@model IEnumerable<MYBUSINESS.Models.BOM>

@{
    ViewBag.Title = "BOM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Bill of Materials (BOM)</h2>

<div class="col-sm-12 noPrint">
    <a href="#" id="printMe" class="btn btn-info"><i class=""></i> Print</a>
    @Html.ActionLink("Create New BOM", "Create", "BOM", new { }, new { @class = "btn btn-success" }) |
    @Html.ActionLink("Upload Excel", "Upload", "BOM", new { }, new { @class = "btn btn-warning" })
</div>

<div id="BOMData">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table class="table table-hover cell-border" id="BOMIndex">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Remarks)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Saleable)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Purchasable)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Manufacturable)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ShelfLife)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().TimeUnit)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProductionProcessCateogry)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProductionProcessDescription)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Remarks)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Saleable)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Purchasable)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Manufacturable)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ShelfLife)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TimeUnit)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProductionProcessCateogry)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProductionProcessDescription)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr style="font-weight:bold">
                                    <td colspan="8">Total</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#BOMIndex').DataTable({
            "scrollY": "400px",
            "scrollCollapse": true,
            "paging": false,
            "bInfo": false,
            "order": [[0, "desc"]],
            "searching": true
        });
    });
</script>
